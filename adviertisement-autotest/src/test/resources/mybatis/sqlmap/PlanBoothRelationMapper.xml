<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.PlanBoothRelationMapper">
  <resultMap id="BaseResultMap" type="dba.model.PlanBoothRelation">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="booth_code" jdbcType="VARCHAR" property="boothCode" />
    <result column="plan_id" jdbcType="BIGINT" property="planId" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
    <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify" />
  </resultMap>
  <sql id="Base_Column_List">
    id, booth_code, plan_id, gmt_create, gmt_modify
  </sql>

  <select id="selectByPlanId"  resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from plan_booth_relation
    where plan_id = #{planId}
  </select>


  <select id="selectByBoothCode"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from plan_booth_relation
    where booth_code = #{boothCode}
  </select>


  <select id="selectByBoothCodePlanInCommit"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from plan_booth_relation
    where booth_code like concat('%', #{boothCode}, '%') and plan_id in (select id from plan where state>1);
  </select>



  <delete id="deletePlanBoothRelationNotInPlan">
    DELETE FROM plan_booth_relation
    WHERE plan_id NOT IN (SELECT id FROM plan);
  </delete>


  <delete id="deletePlanBoothRelationNotInBooth">
    DELETE FROM plan_booth_relation
    WHERE booth_code NOT IN (SELECT booth_code FROM booth);
  </delete>


  <delete id="deletePlanBoothRelationByBoothCode">
    DELETE FROM plan_booth_relation
    WHERE booth_code  = #{boothCode};
  </delete>


</mapper>