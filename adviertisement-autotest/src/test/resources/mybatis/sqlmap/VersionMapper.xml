<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.VersionMapper">
  <resultMap id="BaseResultMap" type="dba.model.Version">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="sys_id" jdbcType="BIGINT" property="sysId" />
    <result column="version_code" jdbcType="BIGINT" property="versionCode" />
    <result column="version_wrapper" jdbcType="VARCHAR" property="versionWrapper" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
    <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify" />
  </resultMap>
  <sql id="Base_Column_List">
    id, sys_id, version_code, version_wrapper, gmt_create, gmt_modify
  </sql>


  <select id="selectById" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from version
    where id = #{id}
  </select>



  <select id="selectByName" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from version
    where version_wrapper = #{name}
  </select>


  <select id="selectBySysId" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from version
    where sys_id = #{sysId}
  </select>



  <select id="getAllVersion" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from version;
  </select>


  <delete id="deleteLikeName">
    delete from version
    where  version_wrapper like concat('%', #{name}, '%')
  </delete>

</mapper>