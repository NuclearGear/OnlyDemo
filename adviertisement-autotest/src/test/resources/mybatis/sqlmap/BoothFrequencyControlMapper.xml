<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.BoothFrequencyControlMapper">
  <resultMap id="BaseResultMap" type="dba.model.BoothFrequencyControl">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="booth_code" jdbcType="VARCHAR" property="boothCode" />
    <result column="minutes" jdbcType="INTEGER" property="minutes" />
    <result column="times" jdbcType="INTEGER" property="times" />
  </resultMap>
  <sql id="Base_Column_List">
    id, booth_code, minutes, times
  </sql>
  <select id="selectByBoothCode"   resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from booth_frequency_control
    where booth_code = #{boothCode}
  </select>


  <delete id="deleteRelationNotInBooth" parameterType="java.lang.Long">
    delete from booth_frequency_control
    WHERE booth_code NOT IN (SELECT booth_code FROM booth);
  </delete>

</mapper>