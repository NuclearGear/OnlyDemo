<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="dba.model.User">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="uid" jdbcType="VARCHAR" property="uid" />
    <result column="right_type" jdbcType="INTEGER" property="rightType" />
  </resultMap>
  <sql id="Base_Column_List">
    id, uid, right_type
  </sql>


  <select id="selectByUid"  resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user
    where uid =#{uid}
  </select>

  <select id="selectByRightType"   resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from user
    where right_type = #{type}
  </select>


  <select id="getDisUidByRightType" resultType="java.lang.String">
    select
    DISTINCT uid
    from user
    where right_type = #{type}
  </select>

  <delete id="deleteLikeUid">
    delete from user
    where  uid like concat('%', #{uid}, '%')
  </delete>

</mapper>