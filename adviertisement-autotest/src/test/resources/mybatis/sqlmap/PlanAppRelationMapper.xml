<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.PlanAppRelationMapper">
  <resultMap id="BaseResultMap" type="dba.model.PlanAppRelation">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="plan_id" jdbcType="BIGINT" property="planId" />
    <result column="relation" jdbcType="INTEGER" property="relation" />
    <result column="version_code" jdbcType="VARCHAR" property="versionCode" />
    <result column="platform" jdbcType="INTEGER" property="platform" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
  </resultMap>
  <sql id="Base_Column_List">
    id, plan_id, relation, version_code, platform, gmt_create
  </sql>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from plan_app_relation
    where id = #{id,jdbcType=BIGINT}
  </select>



  <select id="selectByPlanId"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from plan_app_relation
    where  plan_id = #{planId}
  </select>


  <select id="selectByPlanIdPlatform"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from plan_app_relation
    where   plan_id = #{planId}  and platform=#{platform}
  </select>




  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from plan_app_relation
    where id = #{id,jdbcType=BIGINT}
  </delete>

</mapper>