<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.PeriodMapper">
  <resultMap id="BaseResultMap" type="dba.model.Period">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="plan_id" jdbcType="BIGINT" property="planId" />
    <result column="start_time" jdbcType="BIGINT" property="startTime" />
    <result column="end_time" jdbcType="BIGINT" property="endTime" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
    <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify" />
  </resultMap>
  <sql id="Base_Column_List">
    id, plan_id, start_time, end_time, gmt_create, gmt_modify
  </sql>

  <select id="selectByPlanId"   resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from period
    where plan_id = #{planId}
  </select>


  <delete id="deletePeriodNotInPlan">
    DELETE FROM period
    WHERE plan_id NOT IN (SELECT id FROM plan);
  </delete>

</mapper>