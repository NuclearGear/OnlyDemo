<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dba.mapper.BoothPlatformRelationMapper">
  <resultMap id="BaseResultMap" type="dba.model.BoothPlatformRelation">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="booth_code" jdbcType="VARCHAR" property="boothCode" />
    <result column="platform_id" jdbcType="BIGINT" property="platformId" />
    <result column="created_time" jdbcType="TIMESTAMP" property="createdTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, booth_code, platform_id, created_time
  </sql>


  <select id="selectByBoothCode"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from booth_platform_relation
    where  booth_code = #{boothCode};
  </select>

  <delete id="deleteRelationNotInBooth">
    DELETE FROM booth_platform_relation
    WHERE booth_code NOT IN (SELECT booth_code FROM booth);
  </delete>

</mapper>